<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vertical.Views.InfoPage">    
    <ContentPage.Content>        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="{Binding SystemObjectModel.Name, StringFormat='Название: {0}'}" Style="{x:StaticResource DefaultLabelStyle}"/>
                <Label Text="{Binding SystemObjectModel.TypeName, StringFormat='Тип: {0}'}" Style="{x:StaticResource DefaultLabelStyle}"/>
                <Label Text="{Binding SystemObjectModel.CreationTime, StringFormat='Дата создания: {0}'}" Style="{x:StaticResource DefaultLabelStyle}"/>
            </StackLayout>
            
            <Button Grid.Row="1" Text="Назад" Command="{Binding BackCommand}" Style="{x:StaticResource BlueButtonStyle}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>