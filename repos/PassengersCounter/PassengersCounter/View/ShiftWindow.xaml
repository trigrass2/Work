<Window x:Class="PassengersCounter.View.ShiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModelsT="clr-namespace:PassengersCounter.ViewModel"
        xmlns:local="clr-namespace:PassengersCounter.View"
        mc:Ignorable="d"
        Title="ShiftWindow" Height="450" Width="800">    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView x:Name="ListShifts" Grid.Row="0" ItemsSource="{Binding Shifts}" SelectionMode="Multiple" SelectedItem="{Binding SelectedShift}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="Shift">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding nameShift}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="1" x:Name="AcceptButton" Content="OK" Click="Accept_Click" />
    </Grid>
</Window>
